{
  "name": "windbreaker-hooks",
  "version": "0.0.1",
  "description": "",
  "main": "src/run-server.js",
  "scripts": {
    "lint": "eslint .",
    "migrate:local": "knex migrate:latest --env $SERVICE_ENVIRONMENT --knexfile ./src/dao/knexfile.js",
    "docker:start": "docker-compose up windbreaker-hooks",
    "docker:stop": "docker-compose down",
    "docker:rebuild:test": "docker-compose build --no-cache test",
    "pretest": "npm run lint",
    "test": "docker-compose run test; npm run docker:stop",
    "posttest": "npm run docker:stop",
    "test:unit": "nyc ava test/unit",
    "test:integration": "docker-compose run test && npm run migrate:local && nyc ava test/integration; npm run docker:stop",
    "test:docker:ci": "npm run migrate:local && nyc ava test/unit test/integration/*-test.js --verbose",
    "start": "browser-refresh src/run-server.js",
    "cluster:start": "browser-refresh src/cluster.js"
  },
  "author": "",
  "license": "MIT",
  "config": {
    "branchNameCommitModifier": {
      "projectName": "WB"
    }
  },
  "ava": {
    "require": [
      "require-self-ref"
    ]
  },
  "dependencies": {
    "fashion-model-defaults": "^1.0.2",
    "js-yaml": "^3.9.1",
    "knex": "^0.13.0",
    "koa": "^2.3.0",
    "koa-body": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-path-router": "^0.1.1",
    "koa-router": "^7.2.1",
    "n-level-cache": "^1.0.3",
    "queue": "^4.4.0",
    "require-self-ref": "^2.0.1",
    "task-list": "^1.0.6",
    "uuid": "^3.1.0",
    "windbreaker-service-util": "github:windbreaker-io/windbreaker-service-util"
  },
  "devDependencies": {
    "ava": "^0.20.0",
    "branch-name-commit-modifier": "^2.0.1",
    "browser-refresh": "^1.6.0",
    "eslint": "^4.6.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "get-port-sync": "^1.0.0",
    "git-hooks": "^1.1.8",
    "nyc": "^11.2.1",
    "porti": "^1.0.4",
    "sinon": "^2.4.1",
    "superagent": "^3.5.2"
  }
}
